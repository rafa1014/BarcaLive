@model IEnumerable<MatchDto>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<h2>Matcher</h2>
<table class="table table-striped">
  <thead><tr><th>Datum</th><th>Match</th><th>Resultat</th></tr></thead>
  <tbody>
    @foreach(var m in Model.OrderByDescending(x=>x.UtcDate)){
      <tr>
        <td>@m.UtcDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
        <td>@m.HomeTeam - @m.AwayTeam</td>
        <td>@(m.HomeScore.HasValue ? $"{m.HomeScore} - {m.AwayScore}" : "Kommande")</td>
      </tr>
    }
  </tbody>
</table>
